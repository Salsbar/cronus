int turbo = 0; // Turbo on/off 

main {

// Start/stop turbo mode

if (event_press(XB1_RS)) {
    if (turbo == 0) {
    turbo = 1;
    }
    else {
    turbo = 0;
    }
}

if (turbo == 1) {
    combo_run(TurboCombo);
    }
}

// Turbo mode code runs in a looop
combo TurboCombo {

wait(500);
set_val(XB1_LB, 100);
wait(20);
set_val(XB1_LB, 0);
}