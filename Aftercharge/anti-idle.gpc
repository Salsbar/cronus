int turbo = 0; // Turbo on/off 

main {

if (event_press(XB1_RS)) {
    if (turbo == 0) {
    turbo = 1;
    }
    else {
    turbo = 0;
    }
}

if (turbo == 1) {
    combo_run(TurboCombo);
    }

}
// Turbo mode code runs in a loop
combo TurboCombo {

	set_val(XB1_LY , 0);
	set_val(XB1_LY , -100);
	wait(500);
	set_val(XB1_LY , 0);
	wait(500);
	set_val(XB1_LY , 0);
	set_val(XB1_LY , 100);
	wait(500);
	set_val(XB1_LY , 0);
	wait(4000);
	wait(4000);
	wait(2000);
}