/* ****UNTESTED/WIP****
INSTRUCTIONS
1) Press the button that is desired to be rubber banded for at least 1 second.
2) To rubber band the sticks, click and hold the stick you wish to rubber band and press the direction you wish to rubber band it with the D-Pad.
3) Both sticks and any single button can be rubber banded simaltenously or seperately.
To stop the macro from turboing a button, simply press the same button again once or click both sticks at the same time.
*/
int input,i=1,j,k,m;
int delay=50;

main 
{
	if(get_val(XB360_RS) && get_val(XB360_LS))
	{
		j = 0;
		k = 0;
		m = 0;
	}
	if(i == 1)
	{
		if(j==0)
		{
			button();
		}
		if(get_val(input) && get_ptime(input) > 1000)
		{
			j = 1;
		}
		if(j==1)
		{
			combo_run(turbo);
			if(get_val(XB360_BACK) && get_val(XB360_DOWN))
			{
				delay = delay + 5;
			}
			if(get_val(XB360_BACK) && get_val(XB360_UP))
			{
				delay = delay - 5;
			}
			if(event_press(input))
			{
				j = 0;
			}
		}
		if(get_val(XB360_LS) && get_val(XB360_DOWN))
		{
			m = 2;
		}
		if(get_val(XB360_LS) && get_val(XB360_UP))
		{
			m = 3;
		}
		if(get_val(XB360_LS) && get_val(XB360_LEFT))
		{
			m = 4;
		}
		if(get_val(XB360_LS) && get_val(XB360_RIGHT))
		{
			m = 5;
		}
		if(get_val(XB360_RS) && get_val(XB360_UP))
		{
			k = 2;
		}
		if(get_val(XB360_RS) && get_val(XB360_DOWN))
		{
			k = 3;
		}
		if(get_val(XB360_RS) && get_val(XB360_LEFT))
		{
			k = 4;
		}
		if(get_val(XB360_RS) && get_val(XB360_RIGHT))
		{
			k = 5;
		}
		if(m==2)
		{
			combo_run(LY_DOWN);
		}
		if(m==3)
		{
			combo_run(LY_UP);
		}
		if(m==4)
		{
			combo_run(LX_LEFT);
		}
		if(m==5)
		{
			combo_run(LX_RIGHT);
		}
		if(k==2)
		{
			combo_run(RY_UP);
		}
		if(k==3)
		{
			combo_run(RY_DOWN);
		}
		if(k==4)
		{
			combo_run(RX_LEFT);
		}
		if(k==5)
		{
			combo_run(RX_RIGHT);
		}
	}
}

combo turbo
{
	set_val(input, 100);
}

combo LY_DOWN
{
	set_val(XB360_LY, 100);	
}

combo LY_UP
{
	set_val(XB360_LY, -100);
}

combo LX_RIGHT
{
	set_val(XB360_LX, 100);
}

combo LX_LEFT
{
	set_val(XB360_LX, -100);
}

combo RY_DOWN
{
	set_val(XB360_RY, 100);	
}

combo RY_UP
{
	set_val(XB360_RY, -100);
}

combo RX_RIGHT
{
	set_val(XB360_RX, 100);
}

combo RX_LEFT
{
	set_val(XB360_RX, -100);
}
