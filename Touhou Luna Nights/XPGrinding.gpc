int turbo = 0; // Turbo on/off 

main {

if (event_press(XB360_RS)) {
    if (turbo == 0) {
    turbo = 1;
    }
    else {
    turbo = 0;
    }
}

if (turbo == 1) {
    combo_run(TurboCombo);
    }

}
// Turbo mode code runs in a loop
combo TurboCombo {

set_val(XB1_LEFT, 100);
wait(500);
set_val(XB1_X, 100);
wait(20);
set_val(XB1_X, 100);
wait(20);
set_val(XB1_X, 100);
wait(20);
set_val(XB1_LEFT, 0);
wait(20);
set_val(XB1_RIGHT, 100);
wait(500);
set_val(XB1_RIGHT, 0);
wait(80);
}